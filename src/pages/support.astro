---
// src/pages/support.astro
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Support - WinSlots Casino"
  description="Get help and support for your WinSlots Casino account"
>
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-6">Support Center</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-card text-card-foreground rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-semibold mb-4">FAQ</h2>
        <p>
          Find answers to commonly asked questions about our casino and games.
        </p>
        <a
          href="/support/faq"
          class="mt-4 inline-block bg-primary text-primary-foreground px-4 py-2 rounded-md hover:bg-primary/90"
          >View FAQ</a
        >
      </div>
      <div class="bg-card text-card-foreground rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-semibold mb-4">Contact Us</h2>
        <p>
          Get in touch with our customer support team for personalized
          assistance.
        </p>
        <a
          href="/support/contact"
          class="mt-4 inline-block bg-primary text-primary-foreground px-4 py-2 rounded-md hover:bg-primary/90"
          >Contact Support</a
        >
      </div>
    </div>
  </main>
</Layout>
